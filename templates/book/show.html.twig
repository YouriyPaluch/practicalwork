{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ book.name }}</td>
            </tr>
            <tr>
                <th>Discription</th>
                <td>{{ book.discription }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>
                    {% for author in book.author %}
                        <a href="{{ path('author_show', {'id':author.id}) }}">{{ author.name }} {{ author.patronicName }} {{ author.lastname }}</a><br/>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('book_index') }}">back to list</a>

    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>

    {{ include('book/_delete_form.html.twig') }}
{% endblock %}
