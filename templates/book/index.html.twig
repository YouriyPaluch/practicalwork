{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
    <h1>Book index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Discription</th>
            <th>Authors</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.name }}</td>
                <td>{{ book.discription }}</td>
                <td>
                    {% for author in book.author %}
                        <a href="{{ path('author_show', {'id':author.id}) }}">{{ author.name }} {{ author.patronicName }} {{ author.lastname }}</a><br/>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}">show</a>
                    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}

            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('book_new') }}">Create new</a>
{% endblock %}
